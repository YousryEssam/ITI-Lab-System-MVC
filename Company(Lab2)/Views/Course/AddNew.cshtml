@model Course
@{
    ViewData["Title"] = "AddNew";
    SelectList DeptOptions = new SelectList(ViewBag.Depts, "Id", "Name");
}

<h1>Add New Course</h1>


<form method="post"  asp-action="SaveNew" asp-controller="Course">
    <div>
        <label asp-for="Name"></label>
        <input class="form form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Hours" ></label>
        <input class="form form-control" asp-for="Hours"/>
        <span asp-validation-for="Hours" class="text-danger"></span>
    </div>
    
    <div>
        <label asp-for="Degree"></label>
        <input class="form form-control" asp-for="Degree" />
        <span asp-validation-for="Degree" class="text-danger"></span>

    </div>
    
    <div>
        <label asp-for="MinmunDegree"></label>
        <input class="form form-control" asp-for = "MinmunDegree"/>
        <span asp-validation-for="Degree" class="text-danger"></span>

    </div> 


    <div>
        <label asp-for="DepartmentId"></label>
        <select class="form form-control" asp-for="DepartmentId" asp-items="DeptOptions">
            <option value="0">--Select DEpartment--</option>
        </select>
    </div>
   

    <input type="submit" value="Create" class="btn btn-success" />
</form>

<a type="button" class="btn btn-primary" asp-action="Index" , asp-controller="Course">Back to Course List</a>

